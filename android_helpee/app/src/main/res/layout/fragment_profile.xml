<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@color/background_gray">


    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_picture"
        android:padding="@dimen/basic_padding"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_horizontal"
        />



    <TextView
        android:padding="@dimen/basic_padding"
        android:layout_width="match_parent"
        android:textSize="34sp"
        android:id="@+id/profile_name"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        tools:text="Anutnununu mihaljeviÄ‡"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />

        <TextView
            android:drawableLeft="@drawable/profile_chip"
            android:padding="@dimen/basic_padding"
            android:id="@+id/profile_points_left"
            android:layout_width="wrap_content"
            android:drawablePadding="@dimen/single_unit"
            android:textSize="14dp"
            android:gravity="center_horizontal"
            tools:text="3 LEFT"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"

        android:id="@+id/sign_out_btn"
        android:background="@drawable/amber_selector"
        style="@style/LargeTextButton"
        android:textColor="@color/white"
        android:text="SIGN OUT"
        android:layout_height="@dimen/button_height" />
</RelativeLayout>