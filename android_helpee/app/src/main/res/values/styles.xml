<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimary">@color/main_blue</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/grey_subtitle</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="LargeTextButton">
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/basic_padding</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextUserInfo">

        <item name="android:backgroundTint">@color/md_yellow_800</item>
        <item name="android:padding">@dimen/basic_padding</item>
    </style>

    <style name="DrawerItem">

        <item name="android:paddingTop">@dimen/basic_padding</item>
        <item name="android:paddingBottom">@dimen/basic_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/material_drawer_item_primary_text</item>
        <item name="android:layout_marginLeft">@dimen/default_padding</item>
    </style>
</resources>
